<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Game 1</title>
<style>
body { background:black; color:white; font-family:Arial; text-align:center; padding-top:40px; }
#player { width:50px; height:50px; background:red; position:relative; margin:auto; top:50px; }
</style>
</head>
<body>
<h1>Game 1 - Move the Square (Arrow Keys)</h1>
<div id="player"></div>
<script>
const p = document.getElementById("player");
let x=0,y=0;
document.addEventListener("keydown", e=>{
if(e.key==="ArrowUp") y-=10;
if(e.key==="ArrowDown") y+=10;
if(e.key==="ArrowLeft") x-=10;
if(e.key==="ArrowRight") x+=10;
p.style.transform=`translate(${x}px,${y}px)`;
});
</script>
</body>
</html>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Game 2</title>
<style>
body { background:#003300; color:white; font-family:Arial; text-align:center; padding-top:40px; }
#target { width:80px; height:80px; background:limegreen; border-radius:50%; position:absolute; cursor:pointer; }
</style>
</head>
<body>
<h1>Game 2 - Click the Target!</h1>
<p>Score: <span id="score">0</span></p>
<div id="target"></div>
<script>
const t=document.getElementById("target");
const score=document.getElementById("score");
function moveTarget(){t.style.left=Math.random()*(window.innerWidth-100)+"px"; t.style.top=Math.random()*(window.innerHeight-150)+"px";}
t.onclick=()=>{score.textContent=Number(score.textContent)+1; moveTarget();}
moveTarget();
</script>
</body>
</html>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Game 3</title>
<style>
body { background:#001133; color:white; font-family:Arial; text-align:center; padding-top:40px; }
#ball { width:60px; height:60px; background:cyan; border-radius:50%; position:absolute; left:100px; top:100px; }
</style>
</head>
<body>
<h1>Game 3 - Bouncing Ball</h1>
<div id="ball"></div>
<script>
const ball=document.getElementById("ball");
let x=100,y=100,vx=4,vy=3;
function loop(){x+=vx;y+=vy;if(x<=0||x>=window.innerWidth-60) vx*=-1;if(y<=0||y>=window.innerHeight-60) vy*=-1; ball.style.left=x+"px"; ball.style.top=y+"px"; requestAnimationFrame(loop);}
loop();
</script>
</body>
</html>
